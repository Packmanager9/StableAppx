<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SeekBar
        android:id="@+id/SlideStatsH"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/SlideStatsD"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-211dp" />

    <SeekBar
        android:id="@+id/SlideStatsD"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="211dp" />

    <SeekBar
        android:id="@+id/SlideStatsA"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/SlideStatsD"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:id="@+id/SlideStatsS"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp" />

    <Button
        android:id="@+id/GoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp" />


    <TextView
        android:id="@+id/DisplaySliderH"
        android:layout_width="37dp"
        android:layout_height="46dp"
        android:layout_above="@+id/SlideStatsD"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-211dp" />

    <TextView
        android:id="@+id/DisplaySliderD"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/SlideStatsD"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/DisplaySliderA"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/SlideStatsA"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/DisplaySliderS"
        android:layout_width="37dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/SlideStatsS"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/DisplaySlider"
        android:layout_width="205dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp" />






</RelativeLayout>