<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/LayoutCage"
        android:layout_centerHorizontal="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/playername"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#000900"

                android:textSize="21sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/PlayerMonsterDisplay"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:scaleX="1" />


            <ImageView
                android:id="@+id/PlayerMonsterHPBARE"
                android:layout_width="110dp"
                android:layout_height="11dp"
                android:scaleX="1" />
            <ImageView
                android:id="@+id/PlayerMonsterHPBARx"
                android:layout_width="110dp"
                android:layout_height="11dp"
                android:layout_marginTop="-20.5dp"
                android:scaleX="1" />
            <ImageView
                android:id="@+id/PlayerMonsterHPBAR"
                android:layout_width="110dp"
                android:layout_height="11dp"
                android:layout_marginTop="-21dp"
                android:scaleX="1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:id="@+id/playerhealthicon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            <TextView

                android:textColor="#000900"
                android:id="@+id/playerhealth"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:id="@+id/playerdefenseicon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            <TextView

                android:textColor="#000900"
                android:id="@+id/playerdefense"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:id="@+id/playerattackicon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            <TextView

                android:textColor="#000900"
                android:id="@+id/playerattack"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:id="@+id/playerspeedicon"
                    android:layout_width="15dp"
                    android:layout_height="15dp" />
            <TextView

                android:textColor="#000900"
                android:id="@+id/playerspeed"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp" />
            </LinearLayout>
            <TextView

                android:textColor="#000900"
                android:id="@+id/playerdemove"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp" />
            <TextView

                android:textColor="#000900"
                android:id="@+id/playerhemove"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp" />

            <TextView

                android:textColor="#000900"
                android:id="@+id/playerspmove"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp" />

            <TextView

                android:textColor="#000900"
                android:id="@+id/playeratmove"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp" />


            <LinearLayout
                android:id="@+id/playerImageCage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView

                    android:id="@+id/playerturn"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <ImageView

                    android:id="@+id/playerbuffbox1"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView

                    android:id="@+id/playerbuffbox2"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView

                    android:id="@+id/playerbuffbox3"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView

                    android:id="@+id/playerbuffbox4"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <ImageView

                    android:id="@+id/playerbuffbox5"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout

            android:id="@+id/enemylayout"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView

                    android:id="@+id/enemyname"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:textColor="#000900"

                    android:textSize="21sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/EnemyMonsterDisplay"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleX="-1" />

            <ImageView
                android:id="@+id/EnemyMonsterHPBARE"
                android:layout_width="110dp"
                android:layout_height="11dp"
                android:scaleX="1" />
            <ImageView
                android:id="@+id/EnemyMonsterHPBARx"
                android:layout_width="110dp"
                android:layout_height="11dp"
                android:layout_marginTop="-20.5dp"
                android:scaleX="1" />
            <ImageView
                android:id="@+id/EnemyMonsterHPBAR"
                android:layout_width="110dp"
                android:layout_height="11dp"
                android:layout_marginTop="-21dp"
                android:scaleX="1" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView

                        android:id="@+id/enemyhealthicon"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:textColor="#000900"
                        android:id="@+id/enemyhealth"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="9.7dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView

                        android:id="@+id/enemydefenseicon"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:textColor="#000900"
                        android:id="@+id/enemydefense"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="9.7dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView

                        android:id="@+id/enemyattackicon"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:textColor="#000900"
                        android:id="@+id/enemyattack"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="9.7dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView

                        android:id="@+id/enemyspeedicon"
                        android:layout_width="15dp"
                        android:layout_height="15dp" />
                    <TextView
                        android:textColor="#000900"
                        android:id="@+id/enemyspeed"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textSize="9.7dp" />
                </LinearLayout>
            <TextView
                android:textColor="#000900"
                android:id="@+id/enemydemove"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp"/>
            <TextView
                android:textColor="#000900"
                android:id="@+id/enemyhemove"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp"/>

            <TextView
                android:textColor="#000900"
                android:id="@+id/enemyspmove"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp"/>

            <TextView
                android:textColor="#000900"
                android:id="@+id/enemyatmove"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="9.7dp"/>

            <ImageView

                android:id="@+id/enemyturn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="0dp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/Scroller"
        android:layout_width="265dp"
        android:layout_height="320dp"
        android:layout_marginStart="9dp"
        android:layout_below="@+id/LayoutCage"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000900"
                android:id="@+id/ScrollerLongText"
                android:layout_width="265dp"
                android:layout_height="wrap_content"
                android:textSize="11.5dp"/>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"

        android:layout_alignParentEnd="true"
        android:paddingTop="317dp">
        <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

            <Button
                android:id="@+id/attack"
                android:layout_width="126dp"
                android:layout_height="50dp"
                android:text="⚔"
                android:textSize="23dp"

                android:textColor="#001010"
                android:backgroundTint="#ef7a70"/>
            <Button
                android:id="@+id/heal"
                android:layout_width="126dp"
                android:layout_height="50dp"
                android:layout_marginBottom="0dp"
                android:text="✙"
                android:textSize="23dp"
                android:textColor="#ff0000"
                android:backgroundTint="#3aff00"/>
    <Button
        android:id="@+id/statsbutton"
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:text="Boost"
        android:textSize="20dp"
        android:backgroundTint="#5abaff"/>


    <Button
        android:id="@+id/Special"
        android:layout_width="126dp"

        android:layout_height="50dp"
        android:textSize="23dp"
        android:text="✮"
        android:backgroundTint="#ffffa0"/>

        </LinearLayout>

     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">


             <Button
                 android:id="@+id/RivalSwap"
                 android:layout_width="63dp"
                 android:layout_height="wrap_content"
                 android:text="Rival" />
             <Button
                 android:id="@+id/Deploy"
                 android:layout_width="63dp"
                 android:layout_height="wrap_content"
                 android:textSize="8sp"
                 android:layout_alignParentStart="true"
                 android:text="Deploy" />


         </LinearLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <Button
                 android:id="@+id/Capture"
                 android:layout_width="63dp"
                 android:layout_height="wrap_content"
                 android:textSize="8sp"
                 android:layout_alignParentStart="true"
                 android:text="Capture" />


             <Button
                 android:id="@+id/LabButton"
                 android:layout_width="63dp"
                 android:layout_height="wrap_content"
                 android:layout_alignParentEnd="true"
                 android:text="Lab" />

         </LinearLayout>
     </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/Switcher"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="flip" />


    <Button
        android:id="@+id/RunIt"
        android:layout_width="63dp"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="76dp"
        android:text="Test" />

    <Button
        android:id="@+id/Count"
        android:layout_width="63dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="214dp"
        android:text="#" />

    <Button
        android:id="@+id/TellIt"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
android:layout_marginStart="356dp"
        android:text="Tell" />
    <Button
        android:id="@+id/Statusread"
        android:layout_width="69dp"
        android:layout_height="wrap_content"
android:layout_marginStart="356dp"
        android:layout_marginTop="50dp"
        android:text="Rank" />


    <Button
        android:id="@+id/NewMonstersButton"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:text="New" />

    <Button
        android:id="@+id/Resetti"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Max" />
    <EditText
        android:id="@+id/typehereID"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:inputType="number" />

</RelativeLayout>